{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "types": ["vite/client"],
        "strict": true,
        "jsx": "react",
        "lib": [
          "es2015.promise",
          "dom",
          "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@store/*": ["src/redux/*"],
            "@static/*": ["src/static/*"],
            "@api/*": ["src/api/*"]
        }
    }
}
